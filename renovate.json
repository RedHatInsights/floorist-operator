{
    "extends": [
        "github>konflux-ci/mintmaker//config/renovate/renovate.json"
    ],
    "tekton": {
        "includePaths": [".tekton/**"],
        "schedule": ["at any time"]
    },
    "schedule": [
        "* 3-10 * * 1"
    ],
    "ignorePaths": [
      ".pre-commit-config.yaml"
    ],
    "dockerfile": {
        "enabled": true,
        "pinDigests": true,
        "packageRules": [
            {
                "matchManagers": ["dockerfile"],
                "matchUpdateTypes": ["digest"],
                "enabled": true
            }
        ]
    }
}
